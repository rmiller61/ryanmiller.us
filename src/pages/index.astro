---
import Beats from "../components/Beats.astro";
import Book from "../components/Book.astro";
import Button from "../components/Button";
import Footer from "../components/Footer.astro";
import Header from "../components/Header";
import Projects from "../components/Projects";
import Resume from "../components/Resume.astro";
import Socials from "../components/Socials.astro";
import Tiles from "../components/Tiles";
import { PROJECTS } from "../constants";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <div
    class="relative flex items-center bg-gradient-to-b from-dark to-black py-36 text-white sm:min-h-[calc(100vh-75px)]"
  >
    <div class="container relative z-10">
      <h1
        class="bg-gradient-to-r from-lightBlue to-green bg-clip-text text-transparent"
      >
        Ryan Miller
      </h1>
      <p class="mb-6 font-grifter text-h5 leading-none sm:text-h4 lg:text-h2">
        <span class="relative flex pb-[1.25em]">
          <span
            class="absolute left-0 top-0 inline-block animate-rotateY whitespace-nowrap opacity-0"
            >Software Engineer</span
          >
          <span
            class="absolute left-0 top-0 inline-block animate-rotateY whitespace-nowrap opacity-0 animation-delay-2000"
            >Creative Writer</span
          >
          <span
            class="absolute left-0 top-0 inline-block animate-rotateY whitespace-nowrap opacity-0 animation-delay-4000"
            >UX Designer</span
          >
          <span
            class="absolute left-0 top-0 inline-block animate-rotateY whitespace-nowrap opacity-0 animation-delay-6000"
            >Beatmaker</span
          >
          <span
            class="absolute left-0 top-0 inline-block animate-rotateY whitespace-nowrap opacity-0 animation-delay-8000"
            >Problem Solver</span
          >
        </span>
      </p>
    </div>
  </div>
  <Header client:idle>
    <Socials />
  </Header>
  <main class="bg-white">
    <section id="skills" class="overflow-hidden pt-32">
      <div class="container">
        <h2 class="mb-[-10%] text-center">
          The <span class="text-rust">Skills</span><br />That Pay the <span
            class="text-green">Bills</span
          >
        </h2>
      </div>
      <Tiles client:idle />
    </section>
    <section id="writing" class="flex flex-row flex-wrap justify-center">
      <div class="container relative z-10 text-center">
        <h2>Writing</h2>
        <h5>Short Stories</h5>
        <ul
          class="mb-10 flex flex-col items-center gap-2.5 md:flex-row md:justify-center"
        >
          <li class="inline-block">
            <a class="underline" href="/pdf/AllThatRemains.pdf" target="_blank"
              >All That Remains</a
            >
          </li>
          <li class="hidden md:inline-block">/</li>
          <li class="inline-block">
            <a
              class="underline"
              href="/pdf/TheGrandRe-Opening.pdf"
              target="_blank">The Grand Re-Opening</a
            >
          </li>
          <li class="hidden md:inline-block">/</li>
          <li class="inline-block">
            <a class="underline" href="/pdf/TheLastFish.pdf" target="_blank"
              >The Last Fish</a
            >
          </li>
        </ul>
        <h5><em>The Wolf In Fetters</em></h5>
        <p class="mx-auto max-w-[700px]">
          Read the first chapter of my debut novel, <em>The Wolf in Fetters</em
          >, a gripping and emotional sci-fi thriller for which I am currently
          seeking representation!
        </p>
        <Button href="/pdf/TheWolfInFettersChapter1.pdf" target="_blank">
          Read Chapter One
        </Button>
      </div>
      <Book />
    </section>
    <section id="beats" class="pb-24 pt-32 lg:pt-0">
      <Beats />
    </section>
    <section id="projects">
      <div class="container relative z-10 text-center space-y-5 mb-20">
        <h2>Portfolio</h2>
        <Button href="/portfolio">
          View All Projects
        </Button>
      </div>
      <Projects
        baseVelocity={2}
        client:idle
        items={PROJECTS.slice(0, PROJECTS.length / 2)}
      />
      <Projects
        baseVelocity={-2}
        client:idle
        items={PROJECTS.slice(PROJECTS.length / 2, PROJECTS.length)}
      />
    </section>
    <Resume />
  </main>
  <Footer />
</Layout>
