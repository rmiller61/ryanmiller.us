---
import Layout from '../layouts/Layout.astro'
import Header from "../components/Header"
import Tiles from "../components/Tiles"
import Book from "../components/Book.astro"
import Button from '../components/Button'
import Projects from "../components/Projects"
import { PROJECTS } from "../constants"
import Resume from "../components/Resume.astro"
import Footer from '../components/Footer.astro'
import Beats from '../components/Beats.astro'
import Socials from "../components/Socials.astro";
---

<Layout title="Welcome to Astro.">
	<div class="from-dark to-black bg-gradient-to-b text-white relative py-36 sm:min-h-[calc(100vh-75px)] flex items-center"
    >
      <div class="container relative z-10">
        <h1 class="text-transparent bg-clip-text bg-gradient-to-r from-lightBlue to-green">
          Ryan Miller
        </h1>
        <p class="text-h5 sm:text-h4 lg:text-h2 font-grifter leading-none mb-6">
          <span class="relative flex pb-[1.25em]">
            <span
              class="animate-rotateY opacity-0 whitespace-nowrap inline-block absolute top-0 left-0"
              >Software Engineer</span
            >
            <span
              class="animate-rotateY opacity-0 whitespace-nowrap inline-block absolute top-0 left-0 animation-delay-2000"
              >Creative Writer</span
            >
            <span
              class="animate-rotateY opacity-0 whitespace-nowrap inline-block absolute top-0 left-0 animation-delay-4000"
              >UX Designer</span
            >
			<span
              class="animate-rotateY opacity-0 whitespace-nowrap inline-block absolute top-0 left-0 animation-delay-6000"
              >Beatmaker</span
            >
            <span
              class="animate-rotateY opacity-0 whitespace-nowrap inline-block absolute top-0 left-0 animation-delay-8000"
              >Problem Solver</span
            >
          </span>
        </p>
      </div>
    </div>
	<Header client:idle>
    <Socials />
  </Header>
  <main class="bg-white">
    <section id="skills" class="pt-32 overflow-hidden">
      <div class="container">
        <h2 class="text-center mb-[-10%]">The <span class="text-rust">Skills</span><br/>That Pay the <span class="text-green">Bills</span></h2>
      </div>
      <Tiles client:idle />
		</section>
    <section id="writing" class="flex flex-wrap flex-row justify-center">
      <div class="container text-center relative z-10">
        <h2>Writing</h2>
        <h5>Short Stories</h5>
        <ul class="flex flex-col items-center md:flex-row md:justify-center mb-10 gap-2.5">
          <li class="inline-block">
            <a class="underline" href="/pdf/AllThatRemains.pdf" target="_blank">All That Remains</a>
          </li>
          <li class="hidden md:inline-block">/</li>
          <li class="inline-block">
            <a class="underline" href="/pdf/TheGrandRe-Opening.pdf" target="_blank">The Grand Re-Opening</a>
          </li>
          <li class="hidden md:inline-block">/</li>
          <li class="inline-block">
            <a class="underline" href="/pdf/TheLastFish.pdf" target="_blank">The Last Fish</a>
          </li>
        </ul>
        <h5><em>The Wolf In Fetters</em></h5>
        <p class="max-w-[700px] mx-auto">
          Read the first chapter of my debut novel, <em>The Wolf in Fetters</em>, a gripping and
          emotional sci-fi thriller for which I am currently seeking representation!
        </p>
        <Button
          href="/pdf/TheWolfInFettersChapter1.pdf"
          target='_blank'
          >Read Chapter One</Button
        >
      </div>
      <Book />
    </section>
    <section id="beats" class="pt-32 pb-24 lg:pt-0">
        <Beats />
    </section>
    <section id="projects" class="bg-dark">
      <Projects baseVelocity={2} client:idle items={PROJECTS.slice(0, PROJECTS.length / 2)} />
      <Projects baseVelocity={-2} client:idle items={PROJECTS.slice(PROJECTS.length / 2, PROJECTS.length)} />
    </section>
    <Resume />
  </main>
  <Footer />
</Layout>
