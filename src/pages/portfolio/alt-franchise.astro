---
import Footer from "../../components/Footer.astro";
import Layout from "../../layouts/Layout.astro";
import nextjs from "../../assets/nextjs.svg";
import drizzle from "../../assets/drizzle.svg";
import trpc from "../../assets/trpc.svg";
import reactQuery from "../../assets/react-query.svg";
import tailwind from "../../assets/tailwind.svg";
import figma from "../../assets/figma.svg";
import login from "../../assets/portfolio/alt-franchise/alt-login.jpg"
import dashboard from "../../assets/portfolio/alt-franchise/alt-dashboard.jpg";
import dashboardCalendar from "../../assets/portfolio/alt-franchise/alt-dashboard-calendar.jpg";
---

<Layout title="Welcome to Astro.">
  <main class="relative flex flex-col bg-gradient-to-b from-dark to-black py-36 text-white">
     <div class="container mb-20 space-y-10">
      <a href="/portfolio" class="inline-flex gap-2 items-center">
        <svg class="h-[1em] w-[1em]" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512" height="200px" width="200px" xmlns="http://www.w3.org/2000/svg"><path d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l128 128c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.3 288 480 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-370.7 0 73.4-73.4c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-128 128z"></path></svg>
        <span>Back to Portfolio</span>
      </a>
      <h1>ALT Franchise HQ</h1>
      <div class="mb-10 max-w-3xl">
        <p class="text-2xl font-light">ALT is a fitness franchise. I built a Next.js backend UI for their franchise owners to upload documentation, share files, and undergo training. The app was multitenant and required complex permissions and multiple APIs managed via TRPC and React Query, with a PostgresSQL database run through Drizzle ORM.</p>
      </div>
      <ul class="flex gap-4 flex-wrap">
        <li class="flex items-center space-x-2 py-2 px-4 bg-white text-dark rounded-xl text-sm">
          <img src={nextjs.src} alt="NextJS" class="h-6 w-auto" />
          <span>Next.js</span>
        </li>
        <li class="flex items-center space-x-2 py-2 px-4 bg-white text-dark rounded-xl text-sm">
          <img src={drizzle.src} alt="Drizzle" class="h-6 w-auto" />
          <span>Drizzle</span>
        </li>
        <li class="flex items-center space-x-2 py-2 px-4 bg-white text-dark rounded-xl text-sm">
          <img src={trpc.src} alt="TRPC" class="h-6 w-auto" />
          <span>TRPC</span>
        </li>
        <li class="flex items-center space-x-2 py-2 px-4 bg-white text-dark rounded-xl text-sm">
          <img src={reactQuery.src} alt="Tanstack Query" class="h-6 w-auto" />
          <span>Tanstack Query</span>
        </li>
        <li class="flex items-center space-x-2 py-2 px-4 bg-white text-dark rounded-xl text-sm">
          <img src={tailwind.src} alt="Tailwind" class="h-6 w-auto" />
          <span>Tailwind</span>
        </li>
        <li class="flex items-center space-x-2 py-2 px-4 bg-white text-dark rounded-xl text-sm">
          <img src={figma.src} alt="Figma" class="h-6 w-auto" />
          <span>Figma</span>
        </li>
      </ul>
    </div>
    <div class="container grid sm:grid-cols-2 gap-10">
      <div class="space-y-10 flex flex-col">
        <img src={dashboard.src} alt="ALT Franchise HQ Dashboard" class="w-full h-auto rounded-lg" />
        <img src={dashboardCalendar.src} alt="ALT Franchise HQ Dashboard" class="w-full h-auto rounded-lg" />
        <video src={`/portfolio/alt-files.mp4`} muted autoplay loop playsinline />
      </div>
      <div class="space-y-10 flex flex-col sm:mt-[25%]">
        <img src={login.src} alt="ALT Franchise HQ Dashboard" class="w-full h-auto rounded-lg" />
        <video src={`/portfolio/alt-compliance.mp4`} muted autoplay loop playsinline />
        <video src={`/portfolio/alt-admin-course.mp4`} muted autoplay loop playsinline />
      </div>
    </div>
  </main>
  <Footer />
</Layout>
